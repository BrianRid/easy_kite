

  <div class="container">
  <h2>  Vue par produits</h2>
    <div class="container col-9 mt-2 ">
      <%  @user.products.each do |p| %>
        <div class="border-bottom">


            <h4> <%= p.category %> <%= p.brand %> </h4>
            <% p.rentals.each do |rental| %>
              <div class="notification">
                <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
                <div class="notification-content">
                  <%= rental.date_start %> to <%= rental.date_end %>
                </div>
                  <div class="notification-actions">

                  <% if policy(rental).edit? %>
                    <%= link_to 'Edit <i class="fas fa-pencil-alt"></i>'.html_safe, edit_rental_path(rental) %>
                  <% end %>

                  <% if policy(rental).destroy? %>
                    <%= link_to 'Delete <i class="far fa-trash-alt"></i>'.html_safe, rental, :method => :delete, data: { confirm: 'Are you sure?' }  %>
                  <% end %>

                </div>
              </div>
            <% end %>
          </div>
      <% end %>
    </div>

  <h2>  Vue par date </h2>
    <div class="container col-9 mt-2">
      <% @rentals.each do |rental| %>
        <div class="notification">
          <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
          <div class="notification-content">
            <h4> <%= rental.product.category %> <%= rental.product.brand %></h4>
            <%= rental.date_start %> to <%= rental.date_end %>
          </div>
          <div class="notification-actions">

            <% if policy(rental).edit? %>
              <%= link_to 'Edit <i class="fas fa-pencil-alt"></i>'.html_safe, edit_rental_path(rental) %>
            <% end %>

            <% if policy(rental).destroy? %>
              <%= link_to 'Delete <i class="far fa-trash-alt"></i>'.html_safe, rental, :method => :delete, data: { confirm: 'Are you sure?' }  %>
            <% end %>



          </div>
        </div>
      <% end %>
    </div>
</div>
