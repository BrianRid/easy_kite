

  <div class="container">
    <div class="container col-9 mt-2 ">
  <h4>  Vue par produits</h4>
      <%  @user.products.each do |p| %>
        <div class="border-bottom">
            <%=  link_to product_path(p) do %>
                 <%= p.category %><%= p.brand %>
            <% end %>

            <% p.rentals.order(date_start: :asc).each do |rental| %>
              <div class="notification">
                <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-mini" />
                <div class="notification-content">
                  <%= rental.date_start %> to <%= rental.date_end %>
                </div>
                    <p><%= rental.product.price * (rental.date_end - rental.date_start).to_i %>€</p>
                  <div class="notification-actions">
                  <% if policy(rental).edit? %>
                    <%= link_to 'Edit <i class="fas fa-pencil-alt"></i>'.html_safe, edit_rental_path(rental) %>
                  <% end %>

                  <% if policy(rental).destroy? %>
                    <%= link_to 'Delete <i class="far fa-trash-alt"></i>'.html_safe, rental, :method => :delete, data: { confirm: 'Are you sure?' }  %>
                  <% end %>

                </div>
              </div>
            <% end %>
          </div>
      <% end %>
    </div>

    <div class="container col-9 mt-2">
  <p>  Vue par date </p>
      <% @rentals.each do |rental| %>
        <div class="notification">
          <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar" />
          <div class="notification-content">
            <h4> <%= rental.product.category %> <%= rental.product.brand %></h4>
            <%= rental.date_start %> to <%= rental.date_end %>
          </div>
             <p><%= rental.product.price * (rental.date_end - rental.date_start).to_i %>€</p>
          <div class="notification-actions">

            <% if policy(rental).edit? %>
              <%= link_to 'Edit <i class="fas fa-pencil-alt"></i>'.html_safe, edit_rental_path(rental) %>
            <% end %>

            <% if policy(rental).destroy? %>
              <%= link_to 'Delete <i class="far fa-trash-alt"></i>'.html_safe, rental, :method => :delete, data: { confirm: 'Are you sure?' }  %>
            <% end %>



          </div>
        </div>
      <% end %>
    </div>
</div>
