<div class="container">
  <h1>Edit rental</h1>
  <%= simple_form_for [@product, @rental] do |f| %>
    <div class="rental-infos col-lg-9">
      <!-- date picker -->
      <%= f.input :date_start, as: :date, html5: true %>
      <%= f.input :date_end, as: :date, html5: true %>
    </div>
  <%= f.submit class: 'btn btn-primary'%>
  <% end %>

  <%= link_to "Back", '/dashboard'%>
</div>

