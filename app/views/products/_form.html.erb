<%= simple_form_for(@product) do |f| %>

  <div class="product-infos col-lg-9">
    <%= f.input :category, collection: Product::CATEGORIES, include_blank: "Select a category", label: false %>
    <%= f.input :brand, placeholder: 'Insert the brand for the new product', label: false %>
    <%= f.input :description, placeholder: "DESCRIPTION : Very easy to use / For expert only / Good sensation... ", label: false %>
    <%= f.input :status,  as: :radio_buttons, collection: Product::STATUS.reverse %>
    <%= f.input :price, placeholder: 'Price/day TTC', input_html: { min: '0' }, hint: "This is the price per day in â‚¬", label: false %>
    <%= f.input :photos, as: :file, input_html: { multiple: true }, hint: "You can download many photos. Accepted format : jpeg, jpg, png, gif" %>
  </div>

  <div class="product-location col-lg-9">
    <%= f.input :address, placeholder: 'Insert the product location', label: false %>
  </div>

  <%= f.submit class: 'btn btn-primary'%>
<% end %>
