
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(http://www.voiledetraction.fr/wp-content/uploads/kitesurf-sicily-the-best-offers-in-kitesurf-for-a-sport.jpeg);">
  <div class="container">
    <h1>Easy Kite</h1>
    <p> La meilleure solution pour s'envoyer en l'air</p>
    <br>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group d-flex">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-success">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="grid-wrapper">
    <% @products.each do |product| %>
      <%= link_to product_path(product[:id]) do %>
          <div class="card-trip">
            <img src="https://source.unsplash.com/1600x900/?kitesurf" />
            <div class="card-trip-infos">
              <div>
                <h2><%= product.brand.capitalize %></h2>
                <h3><%= product.category.capitalize %></h3>
                <p><%= product.description %></p>
                <p><%= product.status %></p>
              </div>
              <h2 class="card-trip-pricing"><%= product.price %>â‚¬</h2>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
            </div>
         </div>
      <%end %>
    <% end %>
  </div>
</div>
